<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/personal_details.css">
    <title>Personal Details</title>
    <style>
        body {
            background:#ffffff;
            font-family: 'Arial', sans-serif;
        }
        .header-bg {
            background:   rgb(30, 27, 7);
        }
        .header-title {
            font-family: 'Georgia', serif;
            color: #f8f9fa;
        }
        .btn-primary {
            border-radius: 30px;
        }
    </style>
  </head>
  <body>
    <div class="container-fluid header-bg text-light py-4">
        <header class="text-center">
            <h1 class="display-4 header-title">Personal Details</h1>
        </header>
    </div>
    
    <section class="container my-4 bg-white shadow rounded p-4">
        <!-- <h2 class="text-center text-primary mb-4">User Personal Information Form</h2> -->
        
        <form class="row g-4">
            <div class="col-md-6">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" id="first_name" name="first_name" class="form-control" placeholder="Enter your first name">
            </div>
            <div class="col-md-6">
                <label for="middle_name" class="form-label">Middle Name</label>
                <input type="text" id="middle_name" name="middle_name" class="form-control" placeholder="Enter your middle name">
            </div>
            <div class="col-md-6">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" id="last_name" name="last_name" class="form-control" placeholder="Enter your last name">
            </div>
            <div class="col-md-6">
                <label for="gender" class="form-label">Gender</label>
                <select id="gender" name="gender" class="form-select">
                    <option value="" selected disabled>Choose...</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="date_of_birth" class="form-label">Date of Birth</label>
                <input type="date" id="date_of_birth" name="date_of_birth" class="form-control">
            </div>
            <div class="col-md-6">
                <label for="age" class="form-label">Age</label>
                <input type="number" id="age" name="age" class="form-control" placeholder="Enter your age">
            </div>
            <div class="col-md-6">
                <label for="marital_status" class="form-label">Marital Status</label>
                <select id="marital_status" name="marital_status" class="form-select">
                    <option value="" selected disabled>Choose...</option>
                    <option value="Married">Married</option>
                    <option value="Not Married">Not Married</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="phone_no_1" class="form-label">Phone No 1</label>
                <input type="number" id="phone_no_1" name="phone_no_1" class="form-control" placeholder="Enter primary phone number">
            </div>
            <div class="col-md-6">
                <label for="phone_no_2" class="form-label">Phone No 2</label>
                <input type="number" id="phone_no_2" name="phone_no_2" class="form-control" placeholder="Enter secondary phone number">
            </div>
            <div class="col-md-6">
                <label for="qualification" class="form-label">Qualification</label>
                <input type="text" id="qualification" name="qualification" class="form-control" placeholder="Enter your qualification">
            </div>
            <div class="col-md-6">
              <label for="pin_code" class="form-label">Pin Code</label>
              <input type="text" id="pin_code" name="pin_code" class="form-control" placeholder="Enter pin code">
          </div>

            <div class="col-md-6">
                <label for="home_address_1" class="form-label">Home Address 1</label>
                <input type="text" id="home_address_1" name="home_address_1" class="form-control" placeholder="Enter address line 1">
            </div>
            <div class="col-md-6">
                <label for="home_address_2" class="form-label">Home Address 2</label>
                <input type="text" id="home_address_2" name="home_address_2" class="form-control" placeholder="Enter address line 2">
            </div>
            <div class="col-md-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" name="country" class="form-control" placeholder="Enter your country">
            </div>
            <div class="col-md-6">
                <label for="state" class="form-label">State</label>
                <input type="text" id="state" name="state" class="form-control" placeholder="Enter your state">
            </div>
            <div class="col-md-6">
                <label for="city" class="form-label">City</label>
                <input type="text" id="city" name="city" class="form-control" placeholder="Enter your city">
            </div>
            <div class="col-md-6">
                <label for="employment_status" class="form-label">Employment Status</label>
                <select id="employment_status" name="employment_status" class="form-select">
                    <option value="" selected disabled>Choose...</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="aadhar_card_no" class="form-label">Aadhar Card No</label>
                <input type="number" id="aadhar_card_no" name="aadhar_card_no" class="form-control" placeholder="Enter your Aadhar card number">
            </div>
            <div class="col-md-6">
                <label for="pan_card_no" class="form-label">PAN Card No</label>
                <input type="text" id="pan_card_no" name="pan_card_no" class="form-control" placeholder="Enter your PAN card number">
            </div>
            <div class="col-md-6">
                <label for="passport_no" class="form-label">Passport No</label>
                <input type="text" id="passport_no" name="passport_no" class="form-control" placeholder="Enter your passport number">
            </div>
            <div class="col-12 text-center">
                <button type="submit" onclick="personal_details()" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </form>
    </section>
    <footer class="text-light py-3" style="background: linear-gradient(to right, #6a11cb, #2575fc);">
      <div class="text-center">&copy; 2024 Your Company. All Rights Reserved.</div>
  </footer>
  <script src="/js/personal_details.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
