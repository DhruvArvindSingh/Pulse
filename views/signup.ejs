<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="/css/styles.css"> -->
    <link rel="stylesheet" href="/css/signup.css"> <!-- Updated to link to styles.css -->
    <title>Sign Up</title>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="left-side">
                <div class="animated-bg">
                    <div class="circle"></div>
                    <div class="circle"></div>
                    <div class="circle"></div>
                </div>
                <div class="content">
                    <img src="https://dl-cdn.dl6.in/nsso/images/mp_logo_ori.png" alt="Logo" class="logo">
                    <div class="badge">
                        <span class="badge-icon">âœ“</span>
                        Verified
                    </div>
                    <div class="instructions">
                        <h3>Simple and Direct</h3>
                        <ul>
                            <li>Enter the Instructions</li>
                            <li>Instructions: Enter Here</li>
                            <li>Go to Instructions</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="right-side">
                <div class="form-content">
                    <h1>Welcome!</h1>
                    <p class="subtitle">Create your account to get started</p>
                    
                        <div class="input-row">
                            <div class="input-group">
                                <input type="text" id="first_name" required>
                                <label for="first_name">First Name</label>
                                <span class="highlight"></span>
                            </div>
                            <div class="input-group">
                                <input type="text" id="last_name" required>
                                <label for="last_name">Last Name</label>
                                <span class="highlight"></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <input type="email" id="email" required>
                            <label for="email">Email address</label>
                            <span class="highlight"></span>
                        </div>
                        <div class="input-group">
                            <input type="password" id="password" required>
                            <label for="password">Password</label>
                            <span class="highlight"></span>
                        </div>
                        <div class="input-group">
                            <input type="password" id="confirm-password" required>
                            <label for="confirm-password">Confirm Password</label>
                            <span class="highlight"></span>
                        </div>
                        <button class="btn primary" onclick="submit()">
                            <span>Sign Up</span>
                            <div class="btn-bg"></div>
                        </button>
                        <div class="divider">
                            <span>or</span>
                        </div>
                        <button type="button" class="btn google">
                            <img src="https://pngimg.com/d/google_PNG19635.png" alt="Google" class="google-icon">
                            <span>Sign Up with Google</span>
                        </button>
                    <p class="signin-link">
                        Already have an account? 
                        <a href="/signin" class="animated-link">Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/signup.js"></script>
</body>
</html>
